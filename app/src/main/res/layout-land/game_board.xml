<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/mainMenuButton"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:background="@color/darkRed"
        android:padding="10dp"
        android:text="@string/main_menu"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/horizontal95"
        app:layout_constraintEnd_toStartOf="@+id/vertical33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/horizontal75" />

    <Button
        android:id="@+id/bottomRightButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="5dp"
        android:background="@color/darkBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/vertical66"
        app:layout_constraintTop_toTopOf="@+id/horizontal38" />

    <Button
        android:id="@+id/bottomLeftButton"
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:background="@color/darkYellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/vertical66"
        app:layout_constraintStart_toStartOf="@+id/vertical33"
        app:layout_constraintTop_toTopOf="@+id/horizontal38" />

    <Button
        android:id="@+id/topRightButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="5dp"
        android:background="@color/darkRed"
        app:layout_constraintBottom_toTopOf="@+id/horizontal38"
        app:layout_constraintStart_toStartOf="@+id/vertical66"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:background="@color/darkRed"
        android:padding="10dp"
        android:text="@string/play_again"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/horizontal75"
        app:layout_constraintEnd_toStartOf="@+id/vertical33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/horizontal55" />

    <Button
        android:id="@+id/topLeftButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/darkGreen"
        app:layout_constraintBottom_toTopOf="@+id/horizontal38"
        app:layout_constraintEnd_toStartOf="@+id/vertical66"
        app:layout_constraintStart_toStartOf="@+id/vertical33"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/ls_masters_logo"
        app:layout_constraintBottom_toTopOf="@+id/horizontal35"
        app:layout_constraintEnd_toStartOf="@+id/vertical33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main_logo" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.40" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.62" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <Button
        android:id="@+id/highScoreButton"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:background="@color/darkRed"
        android:padding="10dp"
        android:text="@string/high_score"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/horizontal38"
        app:layout_constraintEnd_toStartOf="@+id/vertical33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/horizontal35" />

</androidx.constraintlayout.widget.ConstraintLayout>